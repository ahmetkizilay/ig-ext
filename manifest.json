{
    "manifest_version": 2,

    "name": "Instagram Viewer",

    "description": "An extension to view Instagram images",

    "homepage_url": "https://github.com/artsince/ig-ext",
    
    "version": "0.5",

    "background": {
        "scripts": ["libs/my-history.min.js", "ig-api.js","background.js"]
    },

    "browser_action": {
        "default_popup": "pages/feed.html",
        "default_icon": "ig-badge-16.png"
    },

    "permissions": [
        "identity",
        "storage",
        "https://api.instagram.com/",
        "https://instagram.com/",
        "http://localhost:2424/"
    ],

    "icons": {
        "48": "ig-badge-48.png"
    }
}